{
    "include": [
        "./src/**/*",
    ],
    "exclude": [
        "node_modules/**/*"
    ],
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "dist",
        "lib": [
            "ESNext",
            "dom"
        ],
        "paths": {
            "@/*": [
                "./src/*",
            ]
        },
        "removeComments": true,
        "target": "ES6",
        "esModuleInterop": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "alwaysStrict": true,
        "allowUnreachableCode": false,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "noUncheckedIndexedAccess": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    }
}